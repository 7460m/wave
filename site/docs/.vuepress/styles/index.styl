.navbar
  .site-name
    font-weight: 800 !important
    letter-spacing: -0.02em


.home
  .hero
    img
      max-width: 450px !important
    h1
      font-size: 4rem !important
      font-weight: 800
      letter-spacing: -0.055em
      line-height: 0.6em
