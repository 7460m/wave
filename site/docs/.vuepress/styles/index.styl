#app
  font-family: 'Inter', sans-serif

.page
  h1
    font-weight: 700
    letter-spacing: -0.02em
  h2
    letter-spacing: -0.02em
  a
    text-decoration: none!important
    border-color: #000
    border-bottom-style: solid
    border-bottom-width: 1px


